    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.TestActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:fitsSystemWindows="true">

            <Button
                android:id="@+id/btn_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="隐藏"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="显示"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_start_animation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始动画"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/black" />
            <Button
                android:id="@+id/btn_clear_animation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束动画"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/black" />
            <Button
                android:id="@+id/btn_start_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始倒计时"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/black" />
            <Button
                android:id="@+id/btn_finish_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/black" />
            <Button
                android:id="@+id/btn_finish_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="finishActivity"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/black" />
            <com.google.android.material.materialswitch.MaterialSwitch
                android:layout_width="88dp"
                android:layout_height="46dp" />



            <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="horizontal"
               android:gravity="center_horizontal">
               <ImageView
                   android:id="@+id/rotation_view"
                   android:layout_width="200dp"
                   android:layout_height="200dp"
                   android:background="#FF9800"
                   android:layout_marginTop="10dp"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginEnd="20dp" />
               <ImageView
                   android:id="@+id/rotation_view2"
                   android:layout_width="200dp"
                   android:layout_height="200dp"
                   android:background="#fff"
                   android:src="@drawable/com_icon_capsule_unknown"
                   android:scaleType="center"
                   android:layout_marginTop="10dp"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginEnd="20dp" />
               <View
                   android:id="@+id/rotation_view3"
                   android:layout_width="200dp"
                   android:layout_height="200dp"
                   android:background="#FF9800"
                   android:layout_marginTop="10dp"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginEnd="20dp"/>
           </LinearLayout>
