<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/scroll_title"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/scroll_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#CFB8B8"
                android:gravity="center"
                android:textSize="50dp"
                android:text="返回"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:text="增加"
                android:id="@+id/scroll_add"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:text="减少"
                android:id="@+id/scroll_minus"
                android:layout_weight="1"/>
        </LinearLayout>

        <com.zd.featuredemo.SmartScrollBar
            android:id="@+id/scrollBar"
            android:layout_width="40dp"
            android:layout_height="280dp"
            app:layout_constraintBottom_toBottomOf="@+id/scroll_recyclerView"
            app:layout_constraintStart_toEndOf="@+id/scroll_recyclerView"
            app:layout_constraintTop_toTopOf="@+id/scroll_recyclerView"
            android:background="#ACACAC"
            app:smart_can_scroll_style="always_show"
            app:smart_cant_scroll_style="dismiss_invisible"
            app:smart_orientation="vertical"
            app:smart_slider_color="#494949"
            app:smart_background_corner="10dp"
            app:smart_slider_corner="10dp"
            app:smart_slider_style="倍数缩放"
            app:smart_slider_length="50%"
            app:smart_enable_drag="true"
            android:layout_marginStart="20dp"/>
            <androidx.recyclerview.widget.RecyclerView
                app:layout_constraintTop_toBottomOf="@+id/scroll_title"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/scroll_recyclerView"
                android:layout_width="500dp"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>